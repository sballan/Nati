<h1>Posts</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				User
			</th>
			<th>
				Text
			</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td>
					<%= post.id %>
				</td>
				<td>
					<%= post.created_at %>
				</td>
				<td>
					<%= post.user.last_name %>
				</td>
				<td>
					<%= truncate(post.text) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>